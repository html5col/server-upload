{{#extend "css"}}
    <style>
    </style>
    <link rel="stylesheet" href="">
{{/extend}}

   <div class="page-group">
        <!-- 单个page ,第一个.page默认被展示-->
        <div class="page">
            <!-- 标题栏 -->
            <header class="bar bar-nav">
              <a class="button button-link button-nav pull-left back">
                <span class="icon icon-left"></span>
                BACK
              </a>
              <h1 class='title'>Reset Password</h1>
            </header>            


            <!-- 这里是页面内容区 -->
            <div class="content">
                <form class="list-block" method="POST" action="/user/postForgotPassword">
                    <input type="hidden" name="_csrf" value="{{csrfToken}}">

                    <ul>
                        <!-- Text inputs -->
                        <li>
                            <div class="item-content">
                            <div class="item-media"><i class="icon icon-form-name"></i></div>
                            <div class="item-inner">
                                <div class="item-title label">Email</div>
                                <div class="item-input">
                                <input type="email" name="email" placeholder="Your Email"/>
                                </div>
                            </div>
                            </div>
                        </li>
                    </ul>

                    <input type="submit" value="submit" id="submit">
                </form>
                <div class="content-block">
                    <div class="row">
                        <div class="">
                            <a href="#" class="button button-big button-fill button-success" id="fake-submit">重置</a>
                        </div>
                    </div>
                </div> 

                    <!--<hr>
                    <p>Need an account? <a href="/user/signup">signup</a></p>
                    <p>Or go <a href="/user/forgotPassword">Forget your Password</a>.</p>          -->
            </div>
                <script>
                    (function(){
                        var fake_submit = document.getElementById('fake-submit');
                        var submit = document.getElementById('submit');
                        fake_submit.onclick = function(e){
                            e.preventDefault();
                            submit.click();
                        };
                    }());
                </script>

        </div><!--.page-->

        <!--其他的单个page内联页（如果有）-->
        <!--<div class="page">...</div>-->
    </div>

    <!-- popup, panel 等放在这里
    <div class="panel-overlay"></div>
    <!-- Left Panel with Reveal effect -->
    {{> general/slide}}

