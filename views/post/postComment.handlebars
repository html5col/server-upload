   <div class="page-group">      
        <div class="page">
            <header class="bar bar-nav">
                <a class="button button-link button-nav pull-left back" href="">
                <span class="icon icon-left"></span>
                
                </a>
                <h1 class='title'>回复</h1>
            </header>
            <div class="content">
                <div class="content-block">
                <form class="list-block" method="POST" action="/post/comment">
                    <input type="hidden" name="_csrf" value="{{csrfToken}}">
                    <input type="hidden" value="{{post.title}}" name="title">

                    <ul>
                        <!-- Text inputs -->
                        <li>
                            <div class="item-content">
                            <div class="item-media"><i class="icon icon-form-name"></i></div>
                            <div class="item-inner">
                                <div class="item-input">
                                <textarea name="content" placeholder="你的回复..."></textarea>
                                </div>
                            </div>
                            </div>
                        </li>
                    </ul>

                    <input type="submit" value="submit" id="submit">
                </form>   
                <div class="content-block">
                    <div class="row">
                        <div class="">
                            <a href="#" class="button button-big button-fill button-success" id="fake-submit">提交</a>
                        </div>
                    </div>
                </div>   
                <script>
                    (function(){
                        var fake_submit = document.getElementById('fake-submit');
                        var submit = document.getElementById('submit');
                        fake_submit.onclick = function(e){
                            e.preventDefault();
                            submit.click();
                        };
                    }());
                </script>


                </div>
            </div>
        </div>  
</div>