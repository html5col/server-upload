<!--if the single page has the single css file,then use the folling-->
{{#extend "css"}}
    <style>
        .secNav{
            padding:0.5rem;
            background-color:white;
        }
        .secNav
            a.btn{
                display:inline-block;
                width:33.3%;
                text-align: center;
           


                color: #5f646e;
                font-size: 0.8rem;
                height: 1rem;
                line-height: 1rem;
                -webkit-box-flex: 1;
                -ms-flex: 1;
                border: 0;
                border-bottom: 2px solid transparent;
                border-radius: 0;

            }

            .content-block{
                
                margin-top:0; 
                padding:0; 

                border:1px solid transparent;
            }
            .fullBlock{
                margin:0;
                width:100%;
                border:1px solid transparent;
            }

            .tip{
                text-align: center;
                background: orange;
                font-size: 0.6em;



            }
            .tip p{
                text-align: center;
                color:white;
                
            }

            .list-block .item-content{min-height:1.4rem;}
            .list-block .item-inner{min-height:1.4rem;}

            .minPost{
                
                margin-top:1em;

                
                border:1px solid transparent;      
            }
    </style>
    <link rel="stylesheet" href="">
{{/extend}}

