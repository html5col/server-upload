<!--if the single page has the single css file,then use the folling-->
{{#extend "css"}}
<style>
  .popup-sum p>.close-popup .icon{
      font-size:1rem;
  }  
  p.sumIcon{
      text-align: center;
  }     

  .popup-sum>.content-block{
      margin: .5em;
  } 
  .content-block h2{
      margin-bottom:0.6rem;
  }
  p.failReason{
      margin-bottom:0;
      margin-top:0!important;
      padding-bottom:0;
    
  }
</style>
{{/extend}}

   <div class="page-group">
        <!-- 单个page ,第一个.page默认被展示-->
        <div class="page">
            <!-- 标题栏 -->
            <header class="bar bar-nav">
              <a class="button button-link button-nav pull-left back">
                <span class="icon icon-left"></span>
                BACK
              </a>

                {{#if user.logo}}
                    <a href="/user/fileupload" class="personLogo button button-link button-nav pull-right" style="width:2em;height:2em;display:block;overflow:hidden;">
                        <img src="/upload/logo/{{postUser.logo}}" style="display:inline-block;width:1em;height:1em;">
                    </a>
                {{else}}
                    <a href="/user/fileupload" class="personLogo button button-link button-nav pull-right" style="width:2em;height:2em;display:block;overflow:hidden;background-color:transparent;">
                    <span class="icon icon-me"></span>
                    </a>
                {{/if}}           


            
              <h1 class='title'>User Profile</h1>
            </header>            


            {{> general/tabs}}
            <!-- 这里是页面内容区 -->
            <div class="content">
                <div class="content-block-title">
                         {{#if isMyPosts}}
                        Your Profile
                        {{else}}
                        {{postUser.username}}'s Profile
                        {{/if}}                    
                </div>
                <div class="list-block">
                    <ul>
                    <li class="item-content item-link">
                        <div class="item-media"><i class="icon icon-f7"></i></div>
                        <div class="item-inner">
                        <div class="item-title">VIP Members</div>
                        <div class="item-after">{{postUser.latestRole}}</div>
                        </div>
                    </li>



                    <li class="item-content item-link">
                        <div class="item-media"><i class="icon icon-f7"></i></div>
                        <div class="item-inner">
                        <div class="item-title">Motivation Contract（契约金)</div>
                        <div class="item-after">{{postUser.contractMoney}}</div>
                        </div>
                    </li>  
                    <li class="item-content item-link">
                        <div class="item-media"><i class="icon icon-f7"></i></div>
                        <div class="item-inner">
                        <div class="item-title">MC-VIP Left</div>
                        <div class="item-after">
                            {{postUser.vipTimeLeft}} Week(s)/{{postUser.monthLeft}} Month(s)
                        </div>
                        </div>
                    </li>                      
                    <li class="item-content item-link">
                        <div class="item-media"><i class="icon icon-f7"></i></div>
                        <div class="item-inner">
                        <div class="item-title">Username</div>
                        <div class="item-after">{{ postUser.username }}</div>
                        </div>
                    </li>
                    <li class="item-content item-link">
                        <div class="item-media"><i class="icon icon-f7"></i></div>
                        <div class="item-inner">
                        <div class="item-title">Email</div>
                        <div class="item-after">
                            {{#if isMyPosts}}
                             {{ postUser.email }}
                            {{else}}
                              ******
                            {{/if}}                                
                           
                            
                        </div>
                        </div>
                    </li>
                    <li class="item-content item-link">
                        <div class="item-media"><i class="icon icon-f7"></i></div>
                        <div class="item-inner">
                        <div class="item-title">Created_at</div>
                        <div class="item-after">{{ postUser.created_at }}</div>
                        </div>
                    </li>                    
                    </ul>
                </div>
                
                {{#if postUser.needMoney}}
                <div>
                    {{#if isMyPosts}}
                    <p style="border:1px dashed red;margin:1em 1em;">您的账户需要补交本月失败的金额才能继续参与下月的契约计划哦！</p>
                    {{else}}
                    <p style="border:1px dashed red;margin:1em 1em;">{{postUser.username}}的账户需要补交本月失败的金额才能继续参与下月的契约计划！</p>
                    {{/if}}
                </div>
                {{/if}}
                

                <div class="content-block-title">
                  <p>RESULT</p>               
                </div>
                <div class="list-block">
                    <ul>
                        <li class="item-content item-link">
                            <div class="item-media"><i class="icon icon-f7"></i></div>
                            <div class="item-inner">
                            <div class="item-title">坚持统计</div>
                            <div class="item-after"><a href="#" class="open-sum" data-popup=".popup-sum">详情</a></div>
                            </div>

                        </li>
                    </ul>
                </div>



                <div class="content-block-title">
                  Post Records                 
                </div>


                {{> post/postsLoop}}
            

                                
            </div>


        </div><!--.page-->

            <div class="popup popup-sum" >
            <div class="content-block">
                <p class="sumIcon"><a href="#" class="close-popup"><span class="icon icon-down"></span></a></p>
                <h2>坚持统计</h2>
                
                    {{#each postUser.failReasons}}
                    <p class="failReason">{{this}}</p>
                    {{/each}}
                
            </div>
            </div>
        

        <!--其他的单个page内联页（如果有）-->
        <!--<div class="page">...</div>-->
    </div>

    <!-- popup, panel 等放在这里
    <div class="panel-overlay"></div>
    <!-- Left Panel with Reveal effect -->
    {{> general/slide}}

    {{#extend "js"}}
     <script>
            $(document).on('click','.create-actions', function () {
                var that = this;
                var buttons1 = [
                    {
                    text: '请选择',
                    label: true
                    },
                    {
                    text: '更新',
                    bold: true,
                    color: 'danger',
                    onClick: function() {
                        //For iPhones/iPods Specifically
                        var parentNode  = that.parentNode;
                        var url = parentNode.getElementsByClassName('editId')[0].value;
                        //alert(url);
                        if ((navigator.userAgent.match(/iPhone/i)) || (navigator.userAgent.match(/iPod/i))) {
                          location.replace(url);
                        }
                        document.location = url;
                    }
                    },
                    {
                    text: '删除',
                    onClick: function() {
                        var parentNode  = that.parentNode;
                        //For iPhones/iPods Specifically
                        var url = parentNode.getElementsByClassName('deleteId')[0].value;
                        //alert(url);
                        $.post(url,function(data){
                             alert('删除成功,请刷新！');
                        });
                       


                    }
                    }
                ];
                var buttons2 = [
                    {
                    text: '取消',
                    bg: 'danger'
                    }
                ];
                var groups = [buttons1, buttons2];
                $.actions(groups);
            });   


            $(document).on('click','.open-sum', function () {
            $.popup('.popup-sum');
            });


    </script>     
    {{/extend}}
















         
                    