{{/extend}}
 <!-- Page breadcrumb -->
 <section id="mu-page-breadcrumb">
   <div class="container">
     <div class="row">
       <div class="col-md-12">
         <div class="mu-page-breadcrumb-area">
           <h2>Form - Classfied Page</h2>
           <ol class="breadcrumb">
            <li><a href="/">Home</a></li>            
            <li class="active">Classfied Page</li>
          </ol>
         </div>
       </div>
     </div>
   </div>
 </section>




<!-- Start contact  -->
 <section id="mu-contact">
   <div class="container">
     <div class="row">
       <div class="col-md-12">
         <div class="mu-contact-area">
          <!-- start title -->
          <div class="mu-title">
            <h2>Classfied Page</h2>
            <p>The page has been Classfied. No viewing without Classfied Code provided!</p>
          </div>
          <!-- end title -->
          <!-- start contact content -->
          <div class="mu-contact-content">           
            <div class="row">

              <div class="col-md-6">

                <div class="mu-contact-left">

                  <form class="contactform" method="POST" action="/courses/classifiedCode">
                    <input type="hidden" name="_csrf" value="{{csrfToken}}">                  
                    <p class="comment-form-code">
                      <label for="code">Classfied Code<span class="required">*</span></label>
                      <input type="text" required="required" aria-required="true" value="" name="code" type="Type Classfied Code Provided">
                    </p>
                

                    <p class="form-submit">
                      <input type="submit" value="Submit" class="mu-post-btn button" name="submit" style="visibility: visible;border:1px solid black">
                    </p>        
                  </form>

                </div>
              </div>
              <div class="col-md-6" style="padding-left:5%">
                <div class="mu-contact-right">

                  <h4>Notice【填表注意事项】</h4>
                  <p>Please notice that you are viewing the classified page！You know what you are doing!</p>
                  <ul style="list-style:disc inside">
                    <li>A must with * [带 * 必填]</li>
                    
                        {{#if user}}
                        {{!--<li>Welcome, {{user.username}}</li>--}}

                        {{else}}
                        <li>
                           <a href="/courses/signup" style="color:#01bafd;">Signup</a> <br>
                           <a href="/courses/login" style="color:#01bafd;">Login</a>
                        </li>
                        {{/if}}
                    
                  </ul>

                </div>
              </div>
            </div>
          </div>
          <!-- end contact content -->
         </div>
       </div>
     </div>
   </div>
 </section>
 <!-- End contact  -->

 









