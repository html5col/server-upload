      {{#each post.comments}}
      <div class="comment">
         <div class="authorArea">
              {{#if this.user.logo}}
                  <a href="/user/profile/{{this.user._id}}" class="commentImg">
                      <img src="/upload/logo/{{this.user._id}}/{{this.user.logo}}">
                  </a>
              {{else}}
                  <a href="/user/profile/{{this.user._id}}">
                  <span class="icon icon-me"></span>
                  </a>
              {{/if}} 
             <span>{{this.author}} {{this.created_at}}</span> 
         </div>

         <div class="commentContent">
           <p>{{{this.content}}}</p>
         </div>
      </div>
      {{/each}}


